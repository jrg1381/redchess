@model Chess.Models.LoginModel
@{
    ViewBag.Title = "Redchess";
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;                
    }
}

<script>
    function ShowRegister() {
        $("#register").show();
    }
</script>

<div id="main-content" class="container">
    <div class="col-lg-2">
        @if (@User.Identity.IsAuthenticated)
        {
            <script> window.location.href = "/Board" </script>
        }
        else
        {
            @Html.Partial("_Login")
            <div style="display: none" id="register">
                @Html.Partial("_Register")
            </div>

            <p>First time here? <a class="menuaction" id="showRegister" href="javascript:ShowRegister()">Sign up</a></p>
        }
    </div>
</div>

