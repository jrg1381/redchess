@model Chess.Models.LocalPasswordModel

<div class="row">
    <h2 class="col-lg-3">Change password</h2>
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new {id = "changePasswordForm"}))
                {
                    @Html.AntiForgeryToken()
                    <div class="well">
                        <div class="input-group">
                            <input type="password" class="form-control" placeholder="Current password" id="oldPassword" name="oldPassword"/>
                        </div>
                    
                        <div class="input-group">
                            <input class="form-control" placeholder="New password" id="newPassword" name="newPassword" type="password"/>
                        </div>

                        <div class="input-group">
                            <input class="form-control" placeholder="Confirm password" id="confirmPassword" name="confirmPassword" type="password"/>
                        </div>
                    </div>

                    <div class="input-group" >
                        <input type="submit" value="Change password" id="submitbutton" class="btn btn-default" />
                    </div>

                    <div data-valmsg-summary="true" class="validation-summary-valid">
                        <ul>
                            <li style="display: none"></li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>