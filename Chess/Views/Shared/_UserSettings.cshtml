@using Chess.Controllers
<script>
     $(document).ready(function() {
         getSpinController().stopLogoSpinner();
     });
 </script>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                @if (Request.IsAuthenticated)
                {
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                }
            </button>
            <div class="pull-left"><img alt="logo" src="~/Images/bN.png" height="32" width="32" style="max-width:100px;margin-top : 11px; margin-right: 8px"/>
                <div style="position:absolute;margin-left:16px;margin-top:-16px;" id="redchess-logo"></div>
            </div>
            <a class="navbar-brand">
                <div>@HttpContext.Current.User.Identity.Name
            <img src="@AccountController.AvatarUrlForUserName(HttpContext.Current.User.Identity.Name)?s=28&d=mm" /></div>
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("New game", "Create", "Board")
                    </li>
                    <li>
                        @Html.ActionLink("My games", "Index", "Board")
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Current games", "Index", "Board")
                    </li>
                }

                <li>
                    @Html.ActionLink("PGN viewer", "", "Pgn")
                </li>

                @if (Request.IsAuthenticated)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Account <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("My account", "Manage", "Account", routeValues: new {area = ""}, htmlAttributes: new {title = "Logged on as " + HttpContext.Current.User.Identity.Name})
                            </li>
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }
</nav>


